{{#layout}}

  <h1 class="headline3">기간 내 식사 혈당 알아보기</h1>
  <div class="grid-container-for-chart">

    <div class="grid-chart-item checkbox">
      <div class="toggle-container">

        <div class="toggle-left">
          <div class="toggle-left-top">
            <b style="font-size: 13px">전체 기간</b>
          </div>

          <div class="toggle-left-bottom">
            <div class="switch-toggle">
              <label>
                <input type="checkbox" id="blood-sugar-date-time-checkbox">
                <span></span>
              </label>
            </div>
          </div>
        </div>
        <div class="toggle-right">
          <div style="margin-top:35%; margin-left:20%;">
            <button type="button" class="btn btn-primary" id="findBloodSugarBtn">조회하기</button>
          </div>
        </div>
      </div>
    </div>


    <div class="grid-chart-item mini-calendar" id="mini-calendar-blood-sugar">

      <label for="start-date">시작 날짜</label>
      <div class="input-group date">
        <input type="text" class="form-control" id="start-date-blood-sugar">
        <div class="input-group-addon">
          <span class="fa fa-calendar"></span>
        </div>
      </div>

      <label for="end-date">끝 날짜</label>
      <div class="input-group date">
        <input type="text" class="form-control" id="end-date-blood-sugar">
        <div class="input-group-addon">
          <span class="fa fa-calendar"></span>
        </div>
      </div>

    </div>

    <div class="grid-chart-item chart-container">
      <canvas id="myChartBloodSugar"></canvas>
    </div>

  </div>

  <script>
    $("#start-date-blood-sugar").datepicker();
    $("#end-date-blood-sugar").datepicker();
  </script>
  <script src="/js/chart/bloodSugar.js"></script>
{{/layout}}