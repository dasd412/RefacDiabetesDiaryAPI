{{#layout}}

  <h1 class="headline3">평균 혈당 알아보기</h1>
  <div class="grid-container-for-chart">

    <div class="grid-chart-item checkbox">
      <div class="toggle-container">

        <div class="toggle-left">
          <div class="toggle-left-top">
              <b style="font-size: 13px">전체 기간</b>
          </div>

          <div class="toggle-left-bottom">
              <div class="switch-toggle">
                  <label>
                      <input type="checkbox" id="average-date-time-checkbox">
                      <span></span>
                  </label>
              </div>
          </div>
        </div>
        <div class="toggle-right">
            <div style="margin-top:35%; margin-right:75%;">
                <button type="button" class="btn btn-primary" id="findAverageBtn">조회하기</button>
            </div>
        </div>
      </div>
    </div>

    <div class="grid-chart-item mini-calendar">

        <label for="start-date-average">시작 날짜</label>
        <div class="input-group date">
            <input type="text" class="form-control" id="start-date-average">
            <div class="input-group-addon">
                <span class="fa fa-calendar"></span>
            </div>
        </div>

        <label for="end-date-average">끝 날짜</label>
        <div class="input-group date">
            <input type="text" class="form-control" id="end-date-average">
            <div class="input-group-addon">
                <span class="fa fa-calendar"></span>
            </div>
        </div>

    </div>

    <div class="grid-chart-item chart-container">
      <canvas id="myChartAverage"></canvas>
    </div>

  </div>

  <script>
      $("#start-date-average").datepicker();
      $("#end-date-average").datepicker();
  </script>

  <script src="/js/chart/average.js"></script>
{{/layout}}