{{#layout}}
  <link href="/css/update_delete/update_delete.css" rel='stylesheet' type="text/css"/>

  <div class="container">
    <div class="row">

      <div class="col-md-8 col-md-offset-2">

        <h1>혈당 일지 수정/삭제 하기</h1>
        <label for="writtenTime">작성 날짜</label>
        {{#writtenTime}}
          <input type="text" value={{writtenTime}} readonly/>
        {{/writtenTime}}

        <form action="" method="POST">
          <div class="form-group">
            <label for="fastingPlasmaGlucose">공복 혈당</label>
            <input type="text" class="form-control" id="fastingPlasmaGlucose"/>
          </div>

          <br>
          <div class="diet">
            <div class="child left">
              <div class="breakFastContainer">
                <label for="breakFast">아침 식사</label>
                <input type="text" class="form-control" id="breakFast" placeholder="아침 혈당"/>
              </div>

              <button type="button" id="breakFastFoodsAddBtn">+</button>
              <input type='text' class='form-control' name='foodName' id="breakFastFoodName" placeholder='음식 이름'/>
              <input type="text" class='form-control' id="breakFastFoodAmount" placeholder="음식 양 (그램 단위)"/>

              <div class="breakFastFoodContainer">
                <label for="breakFastFoods">아침 음식</label>
                <ul id="breakFastFoods">

                </ul>
              </div>
            </div>
            <div class="child center">
              <div class="lunchContainer">
                <label for="lunch">점심 식사</label>
                <input type="text" class="form-control" id="lunch" placeholder="점심 혈당"/>
              </div>

              <button type="button" id="lunchFoodsAddBtn">+</button>
              <input type='text' class='form-control' name='foodName' id="lunchFoodName" placeholder='음식 이름'/>
              <input type="text" class='form-control' id="lunchFoodAmount" placeholder="음식 양 (그램 단위)"/>

              <div class="lunchFoodContainer">
                <label for="lunchFoods">점심 음식</label>
                <ul id="lunchFoods">

                </ul>
              </div>
            </div>
            <div class="child right">
              <div class="dinnerContainer">
                <label for="dinner">저녁 식사</label>
                <input type="text" class="form-control" id="dinner" placeholder="저녁 혈당"/>
              </div>

              <button type="button" id="dinnerFoodsAddBtn">+</button>
              <input type='text' class='form-control' name='foodName' id="dinnerFoodName" placeholder='음식 이름'/>
              <input type="text" class='form-control' id="dinnerFoodAmount" placeholder="음식 양 (그램 단위)"/>

              <div class="dinnerFoodContainer">
                <label for="dinnerFoods">저녁 음식</label>
                <ul id="dinnerFoods">

                </ul>
              </div>

            </div>

          </div>

          <div class="form-group" id="remarkDiv">
            <label for="remark">비고</label>
            <textarea rows="3" class="form-control" id="remark"></textarea>
          </div>

        </form>
        <div class="form-group">
          <button type="button" class="btn btn-warning" id="updateBtn">
            수정하기
          </button>
          <button type="button" class="btn btn-danger" id="deleteBtn">
            삭제하기
          </button>
          <button class="btn btn-secondary" id="cancelBtn">
            취소하기
          </button>
        </div>
      </div>

    </div>
  </div>


  <script src="/js/update_delete/update_delete.js"></script>
{{/layout}}